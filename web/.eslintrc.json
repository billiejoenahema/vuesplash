{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:vue/base",
    "plugin:vue/vue3-essential",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "vue/multi-word-component-names": [
      "error",
      {
        "ignores": [
          "Footer",
          "Loader",
          "Navbar",
          "Photo",
          "Toast"
        ]
      }
    ]
  }
}
